{
    "manifest_version": 3,
    "name": "Custom Headers View",
    "version": "1.3",
    "homepage_url": "https://github.com/z-aki/thunderbird_custom_headers_view",
    "author": "z-aki",
    "description": "Choose which custom email headers to show in the message header toolbar. Thunderbird only offers All or Normal headers view. This extension allows you to see specific selected headers. See options page.",
    "message_display_action": {
        "default_popup": "popup.html",
        "default_title": "Headers"
    },
    "permissions": [
        "storage",
        "messagesRead",
        "menus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "options_ui": {
        "page": "settings.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "custom_headers_view@z-aki",
            "strict_min_version": "128.0"
        }
    }
}